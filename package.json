{
  "name": "@michijs/storybook-utils",
  "license": "MIT",
  "version": "8.4.8",
  "description": "Utilities for the Michijs Storybook template",
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/michijs/storybook-utils.git"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "test-tsc": "tsc --skipLibCheck --noEmit",
    "dist": "tsc",
    "dist-w": "tsc -w",
    "bun-link": "bun link --force",
    "link": "bunx concurrently bun:dist-w bun:bun-link"
  },
  "keywords": [
    "web-components"
  ],
  "devDependencies": {
    "@michijs/shared-configs": "0.0.34",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "@storybook/types": "^8.6.14",
    "storybook": "^10.1.2",
    "@michijs/michijs": "^2.3.30"
  }
}